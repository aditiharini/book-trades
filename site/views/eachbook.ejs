<!doctype html>
<html>

<head>
    <title>Your Books</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <!-- load fontawesome -->
    <style>
        body {
            padding-top: 80px;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
</head>

<body>
    <div class="container">
        <% include searchinfobook.ejs %>
        <form  action="/your-books/<%=bookId%>" method="post" enctype="multipart/form-data" id="form1">
            <input type="file" name="imgfile" id="imgfile" />
            <input type="submit" name="uploadButton" class="upbtn" value="Submit" />
            <span id="status"></span>
        </form>
        <button type="button" id="delete" class="btn btn-danger" onclick="deleteBook()"><i class="fa fa-trash-o fa-lg"></i>Delete Book</button>
        <button type="button" id="goBack" class="btn btn-danger" onclick="goBack()">Go Back</button>
        <script>
            

            function deleteBook() {
                $.ajax({
                    type: 'DELETE',
                    success: function(result) {
                        window.location = "/your-books";
                    }

                });
            }
            
            function goBack() {
                window.location="/your-books"; 
            }
     </script>

    </div>

</body>

</html>